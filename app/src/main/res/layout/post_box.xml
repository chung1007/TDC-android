<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="30dp">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="10dp">
        <ImageView
           android:id="@+id/locationIcon"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/location"
           android:layout_centerVertical="true"
           android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/locationIcon"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/Border"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#B8BCBC"
            android:layout_below="@+id/location"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"/>

   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picturePost"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profileicon"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matthew Parker"
            android:textColor="#000000"
            android:layout_toRightOf="@id/picturePost"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@id/Name"
            android:layout_toRightOf="@id/picturePost"
            android:text="I found some very useful information on what could possibly be our platform for the project. Have you heard of Arduino before? There is something called an Arduino Uno which is a micro controller board that is used for heart rate monitoring  and can be used with something called a BLUELINK SILVER Bluetooth module for data transmission. I just thought it was very interesting and hoped that maybe it could be of use to us. "
            android:paddingLeft="10dp"
            android:ellipsize="end"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/contactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:   "
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m.parker@gmail.com"
            android:layout_toRightOf="@id/contactTitle"
            android:textColor="#000000"/>

    </RelativeLayout>


</LinearLayout>