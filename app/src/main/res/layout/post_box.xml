<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="15dp"
    android:background="@drawable/rounded_post_box">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingTop="10dp">
        <ImageView
           android:id="@+id/locationIcon"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:src="@drawable/location"
           android:layout_centerVertical="true"
           android:paddingLeft="20dp"
           android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@id/locationIcon"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/Border"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"
            android:layout_below="@+id/location"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matthew Parker"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#000000"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/postMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:layout_below="@id/Name"
            android:text="I found some very useful information on what could possibly be our platform for the project. Have you heard of Arduino before? There is something called an Arduino Uno which is a micro controller board that is used for heart rate monitoring  and can be used with something called a BLUELINK SILVER Bluetooth module for data transmission. I just thought it was very interesting and hoped that maybe it could be of use to us. "
            android:paddingLeft="20dp"
            android:ellipsize="end"
            android:paddingRight="30dp"
            android:textSize="13sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/eyeIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:paddingTop="5dp"
            android:src="@drawable/eye5"
            android:alpha="0"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/contactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:  "
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m.parker@gmail.com"
            android:layout_toRightOf="@id/contactTitle"
            android:textColor="#0D3D56"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/readMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="read more"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:textColor="#8D8C8C"
            android:alpha="0"/>

    </RelativeLayout>


</LinearLayout>