<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:id="@+id/header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TheDavisConnection"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>

        <View
            android:id="@+id/titleDivider"
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="#838484"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/title"/>

        <ImageView
            android:id="@+id/postButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/posticon"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="postClicked"/>

        <ImageView
            android:id="@+id/camButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/camicon"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="camClicked"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLayout"
        android:layout_below="@+id/titleLayout">

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write a title..."
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/postImage"
            android:singleLine="true"/>

        <View
            android:id="@+id/border"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#B6B7B7"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/postImage"/>


    </RelativeLayout>

    <View
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#FFFFFF"
        android:layout_below="@id/imageLayout"/>

    <RelativeLayout
        android:id="@+id/locationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add location"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/locationIcon"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:background="@null"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationInput"
        android:paddingTop="15dp"
        android:id="@+id/relativeLayout">


        <View
            android:id="@+id/border2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#B6B7B7"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="40dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/postMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Write your message..."
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        android:gravity="top|left"
        android:layout_below="@id/relativeLayout"/>


    <View
        android:id="@+id/border3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#B6B7B7"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/postMessage"/>


